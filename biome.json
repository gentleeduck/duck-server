{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "assist": {
    "actions": {
      "source": {
        "recommended": true
      }
    },
    "enabled": true
  },
  "files": {
    "includes": ["**", "!**/node_modules", "!**/dist", "!**/build", "!**/coverage", "!**/public", "!**/.next"]
  },
  "formatter": {
    "attributePosition": "multiline",
    "bracketSameLine": true,
    "bracketSpacing": true,
    "enabled": true,
    "formatWithErrors": false,
    "includes": [
      "**",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/build/**",
      "!**/out/**",
      "!**/coverage/**",
      "!**/test/**",
      "!**/public/**",
      "!**/.next/**",
      "!**/.*/**"
    ],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "attributePosition": "auto",
      "bracketSameLine": true,
      "bracketSpacing": true,
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "all"
    },
    "globals": ["Global1"],
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "linter": {
    "enabled": true,
    "includes": [
      "**",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/build/**",
      "!**/out/**",
      "!**/coverage/**",
      "!**/public/**",
      "!**/.next/**",
      "!**/.*/**",
      "!**/*.css"
    ],
    "rules": {
      "complexity": {
        "noBannedTypes": "off"
      },
      "nursery": {
        "noImportCycles": "off",
        "useSortedClasses": {
          "fix": "safe",
          "level": "info",
          "options": {
            "attributes": ["className", "class"],
            "functions": ["clsx", "cva", "tw", "twMerge", "cn", "twJoin", "tv"]
          }
        }
      },
      "recommended": false,
      "style": {},
      "suspicious": {
        "noDocumentCookie": "off",
        "noDoubleEquals": "error",
        "noExplicitAny": "off",
        "noThenProperty": "error",
        "noUnknownAtRules": "info",
        "noVar": "error",
        "useGetterReturn": "error"
      }
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "overrides": [
    {
      "formatter": {
        "indentWidth": 2
      },
      "includes": ["**/*.json"]
    }
  ],
  "plugins": []
}
